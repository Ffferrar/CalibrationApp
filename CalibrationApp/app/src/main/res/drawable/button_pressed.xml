<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outside border/shadow -->

    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <size
                android:width="200dp"
                android:height="200dp" />
            <gradient
                android:angle="90"
                android:startColor="#F5FDFF"
                android:endColor="#032F30" />
        </shape>
    </item> <!-- Inset -->
    <item android:state_pressed="true"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#D6EAEF"
                android:endColor="#07575B" />
        </shape>
    </item> <!-- Inside border/shadow -->

    <item android:state_pressed="true"
        android:top="15dp"
        android:left="15dp"
        android:right="15dp"
        android:bottom="15dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#D6EAEF"
                android:endColor="#07575B" />
        </shape> </item> <!-- Main button -->
    <item android:state_pressed="false"
        android:top="16dp"
        android:left="16dp"
        android:right="16dp"
        android:bottom="16dp">

        <shape android:shape="oval">
            <solid android:color="#66A5AD" />
        </shape> </item> <!-- Button image -->






</layer-list>